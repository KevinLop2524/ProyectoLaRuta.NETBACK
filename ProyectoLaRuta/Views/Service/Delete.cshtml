@model ProyectoLaRuta.Models.Service

@{
    ViewData["Title"] = "Eliminar Servicio";
}

<h1>Eliminar Servicio</h1>
<hr />

<h3>¿Estás seguro que quieres eliminar esto?</h3>

<div>
    <h4>@Model.Nombre</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Tipo</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.User?.Username</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
